{% block stylesheets %}
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% extends "base.html.twig" %}

{% block content %}

<body>

    <div class="wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="mt-5 mb-3">View Users</h1>

<table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for c in User %}
                                <tr> 
                                    <td>{{ c.id }}</td>
                                    <td>{{ c.Username }}</td>
                                    <td>{{ c.Name }}</td>
                                    <td>{{ c.Surname }}</td>
                                    <td>{{ c.Email }}</td>
                                    <td> <p><a href="/users/delete/{{c.id}}" class="btn btn-danger"> <i class="fa-solid fa-trash"></i></a>
                                    <a href="/users/update/{{c.id}}" class="btn btn-primary">
                                    <i class="fa-solid fa-pen"></i></a></p>
                                    <script type="text/javascript">toastr.success('Have Fun')</script>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>        
        </div>
    </div>

{% endblock %}